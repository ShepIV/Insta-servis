%h3.text-center.login-title Users#profile
%p.text-center.notice= notice
%p.text-center.alert= alert

- if !flash[:notice].blank?
  .alert.alert-info
    = flash[:notice]

.row
  .col-sm-6.col-md-4
  - if user_signed_in?
    %span
      Здравствуйте, #{current_user.email}
      - if current_user.confirmed?
        %span (подтвержден)
      - else
        %span (не подтвержден)
    = link_to 'Выйти', destroy_user_session_path, :method => :delete
    %h2.text_center
    = link_to 'Listing posts', posts_path
    %head
  - else
    = link_to 'Войти', new_user_session_path
    или #{link_to 'Зарегистрироваться', new_user_registration_path}

= form_for @profile do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg


  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :second_name
    = f.text_field :second_name
  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :avatar
    = f.file_field :avatar
  .actions
    = f.submit 'Save'
