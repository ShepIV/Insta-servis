%link{:href => "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css", :rel => "stylesheet"}/
%script{:src => "//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.1/jquery.min.js"}
%link{:href => "dist/switchery.css", :rel => "stylesheet"}/
%script{:src => "dist/switchery.js"}
-#%javascript_include_tag :defaults


.form-group
  - if !flash[:notice].blank?
    .alert.alert-info
      = flash[:notice]


  %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", :rel => "stylesheet"}/
.container
  .row
    .col-xs-2
      %img.img-circle{:alt => "Cinque Terre", :width => "350", :height => "350", :src => "#{@profile.avatar.url}"}/
    .col-xs-2
      %blockquote
        %p #{@profile.first_name} #{@profile.second_name}
        - if current_user && current_user.profile == @profile
          %span
          = link_to 'Edit', edit_profile_path(@profile)
        - else
          %span чужой аккаунт
    .col-xs-3
      %blockquote
        %small
          %cite{:title => "Source Title"}
            - if current_user.confirmed?
              %span (подтвержден)
            - else
              %span (не подтвержден)
              %i.icon-map-marker


        %p
          %i.icon-envelope
          #{@profile.user.email}
          %br/
          %i.icon-globe
          %a{:href => "#"} http://localhost:3000/profiles/#{@profile.id}
          %br/
          -#%i.icon-gift
          -#January 30, 1974
        .span6

          - if current_user != @profile.user
            .follow-unfollow
              - if current_user.follows?(@profile.user)
                = link_to('Unfollow', unfollow_profile_path(@profile), method: :post, remote: true)
              - else
                = link_to('Follow', follow_profile_path(@profile), method: :post, remote: true)
            -#= render "profiles/links/links"
          - else
            = link_to('All users', profiles_path)
    .col-xs-2
      %blockquote
        %ul.inline.user-counts-list
          %li
            Photos
            %span #{@profile.user.posts.count}
          %li
            Followers
            -#%span #{@profile.user.follows.count}
          %li
            Following
            %span
              -##{@profile.user.followers}
    .col-xs-2
      %blockquote
        - if user_signed_in?
          %span
          %p
          = link_to 'Выйти', destroy_user_session_path, :method => :delete

        - else
          = link_to 'Войти', new_user_session_path
          или #{link_to 'Зарегистрироваться', new_user_registration_path}



%head
  -#%link{:href => "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css", :rel => "stylesheet"}/


%body
%ul.nav.nav-tabs{:role => "tablist"}
  %li.nav-item
    %a.nav-link.active{"data-toggle" => "tab", :href => "#profile", :role => "tab"} profile
  %li.nav-item
    %a.nav-link{"data-toggle" => "tab", :href => "#buzz", :role => "tab"} posts
  %li.nav-item
    %a.nav-link{"data-toggle" => "tab", :href => "#references", :role => "tab"} news
/ Tab panes
.tab-content
  #profile.tab-pane.fade.in.active{:role => "tabpanel"}
    %p
      -#%a{:href => profile.avatar}
      -#%b Avatar:
      -#-#= @profile.avatar
      -#= image_tag @profile.avatar
      %p
        %b First name:
        = @profile.first_name
      %p
        %b Second name:
        = @profile.second_name
      %p
        %b profile_User`s:
        = @profile.user_id
  #buzz.tab-pane.fade{:role => "tabpanel"}
    = link_to 'New photo', new_post_path
    .feed-photos
      .row-fluid
        .span12
          - @profile.user.posts.each_slice(6) do |posts|
            %ul.thumbnails.user-media-thumbnails
              - posts.each do |post|
                %li.span2
                  %a.thumbnail{:href => post_path(post.id)}
                    %img{:src => post.image}/
                    .meta
                      %i.icon-heart
                      3
                      %i.icon-comment
                      0

  #references.tab-pane.fade{:role => "tabpanel"}
    - Post.where(user_id: @profile.user.followees(User).pluck(:id)).each do |post|
      .text-center
        .card{:style => "width: 140rem;"}
          %p= image_tag post.image
          .card-block
            %h4.card-title= post.name
            %p.card-text= post.description
            %p= post.created_at
            %p= post.user_id
            %a.btn.btn-primary{href: post_path(post.id)} Show









