.form-group
  - if !flash[:notice].blank?
    .alert.alert-info
      = flash[:notice]

  -#= link_to 'Edit', edit_profile_path(@profile)
  -#\|
  -#= link_to 'Back', profiles_path
  %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", :rel => "stylesheet"}/
.container
  .row
    .span2
      %img.img-circle{:alt => "Cinque Terre", :width => "350", :height => "350", :src => "#{@profile.avatar.url}"}/
    .span4
      %blockquote
        %p #{@profile.first_name} #{@profile.second_name}
        %small
          %cite{:title => "Source Title"}
            - if current_user.confirmed?
              %span (подтвержден)
            - else
              %span (не подтвержден)
            %i.icon-map-marker
        -#%p#notice= notice
        -#- if current_user.follows?(user)

      %p
        %i.icon-envelope
        #{@profile.user.email}
        %br/
        %i.icon-globe
        %a{:href => "#"} http://localhost:3000/profiles/#{@profile.id}
        %br/
        -#%i.icon-gift
        -#January 30, 1974
        .span6

          - if current_user != @profile.user
            .follow-unfollow
              - if current_user.follows?(@profile.user)
                = link_to('Unfollow', unfollow_profile_path(@profile), method: :post, remote: true)
              - else
                = link_to('Follow', follow_profile_path(@profile), method: :post, remote: true)
            -#= render "profiles/links/links"
          - else
            = link_to('All users', profiles_path)
            -#.checkbox
            -#  %label
            -#    %input{"data-toggle" => "toggle", :type => "checkbox"}/
            -#    following
      %ul.inline.user-counts-list
        %li
          Photos #{current_user.posts.count}
          %span.users.posts.count
        %li
          Followers
          %span.count
        %li
          Following
          %span.count
        - if user_signed_in?
          %span
          %p
          = link_to 'Выйти', destroy_user_session_path, :method => :delete
          %p
          = link_to 'Listing posts', posts_path
          %head
        - else
          = link_to 'Войти', new_user_session_path
          или #{link_to 'Зарегистрироваться', new_user_registration_path}

        - if current_user && current_user.profile == @profile
          %span
          = link_to 'Edit', edit_profile_path(@profile)
        - else
          %span чужой аккаунт
          -#- if @user.follow?(current_user)

      %p#notice= notice
      %p.text-center.notice= notice
      %p.text-center.alert= alert



