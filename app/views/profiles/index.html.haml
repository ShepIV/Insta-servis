%h1 Listing profiles

%table
  %thead
    %tr
      %th Avatar
      %th First name
      %th Second name
      %th User
      %th
      %th
      %th

  %tbody
    - @profiles.each do |profile|
      %tr
        %td
          = image_tag profile.avatar.url, alt: 'Cinque Terre', width: '50', height: '50'

        %td= profile.first_name
        %td= profile.second_name
        %td= profile.user_id
        %td= link_to 'Show', profile
        %td= link_to 'Edit', edit_profile_path(profile)
        %td= link_to 'Destroy', profile, :method => :delete, :data => { :confirm => 'Are you sure?' }
         

%br

= link_to 'New Profile', new_profile_path


