= form_for @post, html: { multipart: true } do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field.text-center
    = f.label :name
    = f.text_field :name
  .field.text-center
    = f.label :description
    = f.text_area :description
  .field.text-center
    = f.label :image
    = f.file_field :image

  .actions.text-center
    = f.submit 'Save'
