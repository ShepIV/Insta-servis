- if current_user.likes?(@post)
  = link_to '<i class="fa fa-heart-o" aria-hidden="true"></i>'.html_safe, unlikes_post_path(@post), method: :post, remote: true
- else
  = link_to '<i class="fa fa-heart-o"></i>'.html_safe, likes_post_path(@post), method: :post, remote: true
= @post.likers(User).count